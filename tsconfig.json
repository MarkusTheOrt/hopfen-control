{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "outDir": "./build",
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utilities/*"],
      "@routes/*": ["routes/*", "routes/"]
    },
    "moduleResolution": "Node"
  }
}
